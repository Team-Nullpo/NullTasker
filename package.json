{
  "name": "nulltasker",
  "version": "1.1.0",
  "description": "タスク管理アプリケーション",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:http": "USE_HTTPS=false node server.js",
    "dev": "nodemon server.js",
    "dev:http": "USE_HTTPS=false nodemon server.js",
    "generate-cert": "node scripts/generate-cert.js",
    "migrate": "node scripts/migrate-to-sqlite.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "reset": "node scripts/reset-data.js",
    "reset:users": "node scripts/reset-data.js --users",
    "reset:tasks": "node scripts/reset-data.js --tickets",
    "reset:settings": "node scripts/reset-data.js --settings",
    "reset:projects": "node scripts/reset-data.js --projects",
    "reset:clean": "node scripts/reset-data.js --no-backup"
  },
  "keywords": [
